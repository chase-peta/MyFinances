@model MyFinances.Models.Bill

@{ ViewBag.Title = ((ViewBag.Action != "Create") ? Model.Name : ViewBag.Action) + " Bill"; }

<div class="clear-after">
    <div class="pull-right">
        @if (ViewBag.Action == "Edit")
        {
            @Html.ActionLink("Back to Bill", "Details", new { ID = Model.ID }, new { @class = "btn btn-danger" })
        }
        else
        {
            @Html.ActionLink("Back to all Bills", "Index", null, new { @class = "btn btn-primary" })
        }
    </div>
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-xs-12 col-md-4">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-12">
                @if (ViewBag.Action != "Details")
                {
                    <div class="update-form standard margin-bottom-20">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.ID)

                            <div class="row">
                                <div class="form-group col-xs-12 col-lg-6">
                                    @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>

                                <div class="form-group col-xs-12 col-lg-6">
                                    @Html.LabelFor(model => model.Payee, new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.Payee, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Payee)
                                </div>
                                <div class="clearfix"></div>

                                <div class="form-group col-xs-12 col-lg-6">
                                    @Html.LabelFor(model => model.DueDate, new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DueDate)

                                    <div class="form-check text-center">
                                        @Html.EditorFor(model => model.IsDueDateStaysSame, new { htmlAttributes = new { @class = "form-check-input" } })
                                        @Html.LabelFor(model => model.IsDueDateStaysSame, new { htmlAttributes = new { @class = "form-check-label" } })
                                        @Html.ValidationMessageFor(model => model.IsDueDateStaysSame)
                                    </div>
                                </div>

                                <div class="form-group col-xs-12 col-lg-6">
                                    @Html.LabelFor(model => model.Amount, new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Amount)

                                    <div class="form-check text-center">
                                        @Html.EditorFor(model => model.IsAmountStaysSame, new { htmlAttributes = new { @class = "form-check-input" } })
                                        @Html.LabelFor(model => model.IsAmountStaysSame, new { htmlAttributes = new { @class = "form-check-label" } })
                                        @Html.ValidationMessageFor(model => model.IsAmountStaysSame)
                                    </div>
                                </div>
                                <div class="clearfix"></div>

                                <div class="form-group col-xs-12 col-lg-6">
                                    @Html.LabelFor(model => model.PaymentFrequency, new { htmlAttributes = new { @class = "control-label" } })
                                    @Html.EnumDropDownListFor(model => model.PaymentFrequency, "Select Payment Frequency", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PaymentFrequency)
                                </div>

                                <div class="form-check col-xs-12 col-lg-6 text-center">
                                    @Html.EditorFor(model => model.IsShared, new { htmlAttributes = new { @class = "form-check-input" } })
                                    @Html.LabelFor(model => model.IsShared, new { htmlAttributes = new { @class = "form-check-label" } })
                                    @Html.ValidationMessageFor(model => model.IsShared)
                                </div>
                                <div class="clearfix"></div>

                                <div class="form-group col-xs-12 text-center">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        }
                    </div>
                    if (ViewBag.Action == "Edit")
                    {
                        <div class="margin-bottom-20">
                            @Html.ActionLink("Deactivate", "Deactivate", new { id = Model.ID }, new { @class = "btn btn-danger confirmation",
                                data_confirm_title = "Deactivate " + Model.Name + " Bill", data_confirm_message= "Are you sure you want to deactivate deactivate " + Model.Name + " Bill?", data_confirm_style="danger",
                                data_toggle ="tooltip", data_placement="right", title="Will set to NOT active - Payments will NOT be deleted" })
                        </div>
                    }
                }
                else
                {
                    <div class="tab-content margin-bottom-20">
                        <div class="table-container">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Amount)</th>
                                        <td>@Html.DisplayFor(model => model.Amount)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.DueIn)</th>
                                        <td>@Html.DisplayFor(model => model.DueIn)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.DueDate)</th>
                                        <td>@Html.DisplayFor(model => model.DueDate)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Payee)</th>
                                        <td>@Html.DisplayFor(model => model.Payee)</td>
                                    </tr>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.IsShared)</th>
                                        <td>@Html.DisplayFor(model => model.IsShared)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="text-right margin-bottom-20">
                        @if (Model.IsActive)
                        {
                            @Html.ActionLink("Add Payment", "AddPayment", new { ID = Model.ID }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Edit Bill", "Edit", new { ID = Model.ID }, new { @class = "btn btn-primary" })
                        }
                        else
                        {
                            @Html.ActionLink("Delete", "Delete", new { ID = Model.ID }, new { @class = "btn btn-danger confirmation pull-left",
                                data_confirm_title = "Permanently Delete " + Model.Name + " Bill", data_confirm_message = "Are you sure you want to permanently delete " + Model.Name + " Bill?<br><strong>All payments will be deleted with deletion.</strong>", data_confirm_style = "danger",
                                data_toggle = "tooltip", data_placement = "right", title = "Will delete - Payments WILL BE DELETED" })

                            @Html.ActionLink("Activate", "Activate", new { ID = Model.ID }, new { @class = "btn btn-success confirmation",
                                data_confirm_title = "Activate " + Model.Name + " Bill", data_confirm_message = "Are you sure you want to activate " + Model.Name + " Bill?", data_confirm_style = "success",
                                data_toggle = "tooltip", data_placement = "left", title = "Set Active" })
                        }
                    </div>
                }
            </div>

            @Html.Partial("_BillInfo")
        </div>
    </div>

    @Html.Partial("_PaymentAverage")
</div>